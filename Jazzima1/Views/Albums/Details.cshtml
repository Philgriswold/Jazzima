                                            <dd class="col-sm-10">
                                                @Html.DisplayFor(modelItem => item.Content)
                                            </dd>
                                        </div>
                                        <div class="col">
                                            <a asp-action="Edit" asp-route-id="@item.Id" asp-controller="Comments">
                                                <input class="btn btn-dark" type="submit" value="Edit a Comment" />
                                            </a>
                                        </div>
                                    }
                                }
                            </div>
                        </div>


                    </div>
                </div>
            </td>

                </div>
                    <div class="row">
                        <div class="col-sm">
                        <div class="card">
