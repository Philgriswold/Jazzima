@model Jazzima1.Models.ViewModels.MusicianAlbumViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="jazzima-home">
    <form asp-action="Index">
        <div class="container">
            <div class="row">
                <div class="col">
                    <img src="https://i.pinimg.com/originals/b7/23/94/b7239463be76f401ceb0d42514148762.jpg" style="max-width: 500px;" class="card-img-top" alt="album picture">
                    <label class="control-label">Horns</label>
                    <select asp-for="HornId" class="home-form-control" asp-items="Model.HornPlayers"></select>
                </div>

                @*----------------------------------------------------------------*@
                <div class="col">
                    <img src="https://media.newyorker.com/photos/5d796c91a5350d0008a142dc/master/pass/brody-bluenote.jpg" style="max-width: 500px;" class="card-img-top" alt="album picture">
                    <label class="control-label">Piano</label>
                    <select asp-for="PianoId" class="home-form-control" asp-items="Model.PianoPlayers"></select>
                </div>

                @*------------------------------------------------------------------------*@
                <div class="col">
                    <img src="https://www.morrisonhotelgallery.com/images/big/WCHAMP16.jpg" style="max-width: 500px;" class="card-img-top" alt="album picture">
                    <label class="control-label">Bass</label>
                    <select asp-for="BassId" class="home-form-control" asp-items="Model.BassPlayers"></select>
                </div>

                @*--------------------------------------------------------------------------------*@
                <div class="col">

                    <img src="https://i.pinimg.com/originals/b6/b8/0b/b6b80b704420f01bc01cb5706a0ce46f.jpg" style="max-width: 500px;" class="card-img-top" alt="album picture">
                    <label class="control-label">Drums</label>
                    <select asp-for="DrumId" class="home-form-control" asp-items="Model.DrumPlayers"></select>
                </div>
                @*-------------------------------------------------------------------------------------*@

            </div>
        </div>
        <div class="text-center">
            <div class="submit-form-group">
                <input type="submit" value="Submit" class="btn btn-prim ary" />
            </div>
        </div>

    </form>
</div>





